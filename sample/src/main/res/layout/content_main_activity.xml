<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.ona.kujaku.sample.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Offline Map Download"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/edt_mainActivity_mapName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Map Name"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top left Bound"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/edt_mainActivity_topLeftlatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edt_mainActivity_topLeftlongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:layout_weight="1"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom Right Bound"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/edt_mainActivity_bottomRightlatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edt_mainActivity_bottomRightlongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_mainActivity_startOfflineDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Offline Download"/>

        <Button
            android:id="@+id/btn_mainActivity_openMapActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Map Activity"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapbox Style URL to download"/>

            <EditText
                android:id="@+id/edt_mainActivity_mapboxStyleURL"
                android:hint="Enter mapbox Style URL to download here"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_mainActivity_downloadMapboxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Mapbox Style"/>

            <Button
                android:id="@+id/btn_mainActivity_launchKujakuMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Launch Kujaku Map"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
